.top {
    /* position: fixed;
    left: 0;
    top: 0;
    width: 100vw;
    z-index: 222; */
    background: red;
    /* height: 100px; */
    display: flex;
    padding: 20px 0;
    padding-top: 30px;
    box-sizing: border-box;
    align-items: center;
}

.top .search {
    display: flex;
    width: 80%;
    height: 30px;
    border-radius: 20px;
    padding-left: 10px;
    line-height: 30px;
    background: #fff;
    color: #888;
    padding: 3px 0;
}

.top image {
    margin-top: 4px;
    width: 20px;
    height: 20px;
    margin-right: 4px;
    margin-left: 8px;
}

.top .grap {
    margin-top: 4px;
    width: 22px;
    height: 22px;
    margin-right: 8px;
}

.top input {
    margin-top: 2px;
}

.top text {
    margin: 0 10px;
    color: #fff;
}

.nav {
    display: flex;
    flex-wrap: wrap;
    background: #f5f5f5;
}

.nav view {
    font-size: 14px;
    color: #898989;
    width: 25%;
    text-align: center;
    margin-top: 10px;
}

.nav image {
    width: 50px;
    height: 50px;
}

.title {
    background: #e1e1e1;
    padding: 10px;
    box-sizing: border-box;
    font-weight: bold;
    font-size: 20px;
    letter-spacing: 2px;
}

.shop {
    display: flex;
    background: #e1e1e1;
    padding: 0 10px;
    box-sizing: border-box;
    justify-content: space-between;
    flex-wrap: wrap;
}

.shop-item {
    margin-bottom: 20px;
    box-shadow: 10px 1px 1px #aaa;
    width: 48%;
    background: #fff;
}

.shop-item image {
    width: 100%;
    height: 190px;
}

.shop-item view {
    padding: 4px 10px;
}

/* 多行文本省略 */
.shop-item .proname {
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.box {
    display: flex;
    flex-wrap: wrap;
    box-sizing: border-box;
    padding: 0 10px;
    justify-content: space-between;
}

.box > view {
    box-shadow: 1px 1px 10px red;
    margin-bottom: 15px;
    width: 48%;
    height: 200px;
    border: 1px solid red;
}

.page {
    display: flex;

}

.page view {
    margin: 5px;
    display: inline-block;
    width: 30px;
    height: 30px;
    text-align: center;
    line-height: 30px;
    font-size: 12px;
    border: 1px solid #e1e1e1;
}

.page view.active {
    background-color: red;
    color: #888;
}

.loading {
    padding: 10px;
    box-sizing: border-box;
    text-align: center;
}