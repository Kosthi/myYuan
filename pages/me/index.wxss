.nav {
  display: flex; /* 将所有组合放置在一行 */
  overflow-x: auto; /* 如果组合超出屏幕宽度，添加水平滚动条 */
  white-space: nowrap; /* 防止文字换行 */
}

.menu-item {
  display: flex; /* 将图片和文字放置在一行 */
  flex-direction: column; /* 垂直排列图片和文字 */
  align-items: center; /* 水平居中对齐 */
  margin-right: 10px; /* 可根据需要添加间距 */
}

.avatar {
  margin: 10px 20px;
  margin-left: 23px;
  width: 30px; /* 图片宽度 */
  height: 30px; /* 图片高度 */
  border-radius: 50px;
}

.username {
  font-size: 14px; /* 文字大小 */
  color: #333; /* 文字颜色 */
  text-align: center; /* 文字水平居中对齐 */
}

.nav-text{
  margin: 10px 10px;
}
.nav-text image{
  width: 15px;
  height: 15px;
  /* border-bottom: black 1px solid; */
}

/* 作品 */
.nav-production {
  display: flex;
  flex-wrap: wrap; /* 让图片一行显示三个，并自动换行 */
  margin-left: 2px;
}

.nav-production .nav-item {
  width: 32.8%; /* 让每个项占据三分之一的宽度 */
  margin-right: 2px;
  position: relative; /* 使得文本可以相对于图片进行定位 */
}

.nav-production image {
  width: 100%; /* 图片填充父容器 */
}

.nav-production .like-text {
  position: absolute;
  bottom: 4px;
  left: 15px;
  color: white;
  padding: 2px 5px; /* 调整文本和边框之间的间距 */
  border-top-right-radius: 3px; /* 使得左下角文本框有轻微圆角效果 */
  font-size: 12px; /* 调整字体大小 */
}

.nav-production .aixin {
  position: absolute;
  bottom: 5px;
  left: 1px;
  width: 18px;
  height: 18px;
}
