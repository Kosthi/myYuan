}

.religin {
  color: #888; /* 标签文本的颜色 */
  margin-bottom: 5px; /* 辽宁·沈阳 与添加年龄、学校等标签之间的间距 */
  font-size: 12px;
  background-color: #f3f3f3;
  padding: 4px;
  border-radius: 4px;
}

.text-label {
  color: #888; /* 标签文本的颜色 */
  font-size: 12px;
  background-color: #f3f3f3;
  padding: 4px;
  margin-left: 5px;
  border-radius: 4px;
}

