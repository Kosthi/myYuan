.header {
  border-radius: 10px; /* 圆角边框 */
  padding: 10px; /* 内边距 */
  display: flex; /* 横向排列 */
}

.row1{
  margin-left: 10px;
  background-color: #bfbece; /* 背景颜色为粉色 */
  border-radius: 20px; /* 圆角矩形背景 */
  padding: 8px; /* 可根据需要添加内边距 */
  font-size: 13px;
  color: white;
}

.row2 {
  color: white;
  margin-left: 110px;
  background-color: #bfbece; /* 背景颜色为粉色 */
  border-radius: 20px; /* 圆角矩形背景 */
  padding: 8px; /* 可根据需要添加内边距 */
  font-size: 13px;
}

.icon {
  width: 14px; /* 图标宽度 */
  height: 14px; /* 图标高度 */
  font-size: 14px;
}

.icon1,.icon2{
  margin-left: 10px;
  padding: 8px;
  background-color: #bfbece;
  width: 14px; /* 图标宽度 */
  height: 14px; /* 图标高度 */
  border-radius: 50px;
}

.text {
  margin-left: 4px;
  color: white; /* 文本颜色为白色 */
}

/* 个人信息 */
.user-info {
  background-image: linear-gradient(to top, #666666, white); /* 渐变的大背景 */
  display: flex;
  align-items: center;
  padding: 10px;
  /* margin-bottom: 10px; */
  padding: 20px 10px;
}

.left {
  margin-right: 10px; /* 左侧空隙 */
}

.img {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}

.right {
  flex-grow: 1; /* 右侧占满剩余空间 */
}

.nickname {
  font-size: 30px;
  font-weight: bold;
  margin-right: 10px;
  color: #fdfdfd;
}

.info {
  display: flex;
  align-items: center;
}

.info text {
  margin-right: 10px;
  color: #c3c3c3;
}

.info .img1,.info .img2{
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background-color: #a6a6a6;
  padding: 1px;
}

.white {
  background-color: #ffffff;
  border-radius: 15px; /* 白色背景圆角 */
  padding: 10px 0;
  margin-top: -10px; /* 与图片衔接处 */
}

.white-all {
  display: flex;
}

.complenemt{
  padding: 0 10px ;
