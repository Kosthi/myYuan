.add-friend{
  margin-left: auto; /* 将元素靠右对齐 */
  margin-right: 10px;
  background-color: #f3f3f3;
  padding: 11px 25px;
  border-radius: 8px;
  font-size: 15px;
  font-weight: bolder;
}

.introduce {
  padding: 0 10px;
  display: flex;
  align-items: center; /* 垂直居中 */
}

.text1 {
  font-size: 14px;
}

.introduce {
  display: flex;
  margin-top: 12px;
