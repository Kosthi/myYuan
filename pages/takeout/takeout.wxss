.search {
    /* background-color: #f4f4f4; */
    border-radius: 20px;
    border: #fedbdb 1px solid;
    display: flex;
    padding: 10px;
    margin: 10px;
}

.background {
    border-radius: 20px;
    background: #f6f6f6;
}

.search image {
    margin-left: 10px;
    width: 25px;
    height: 25px;
}

.wrap {
    display: flex;
    flex-wrap: wrap;
    background: #f6f6f6;
    padding: 10px 0;
    box-sizing: border-box;
    border-radius: 20px;
}

.wrap view {
    width: 20%;
    padding: 5px;
    box-sizing: border-box;
    text-align: center;
    color: #313131;
    margin-top: 10px;
}

.wrap view image {
    width: 17vw;
    /* 100vw 屏幕 */
    height: 17vw;
    border-radius: 50%;
}

.top {
    position: fixed;
    right: 0;
    bottom: 20px;

    width: 50px;
    height: 50px;
    color: #f6f6f6;
    font-weight: bold;
    text-align: center;
    line-height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent; /* 设置背景为透明 */
}

.top-image {
    width: 100%;
    height: 100%;
}


.f {
    width: 80vw;
    height: 120px;
    background: linear-gradient(45deg, #fc6f48, #fc1563);
    border-radius: 15px;
    margin: 10px 30px;
    position: relative; /**相对定位**/
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.f .son {
    height: 100px;
    width: 100px;
    background: #fcf0f0;
    position: absolute;
    left: -15px;
    top: 10px;
    border-radius: 30px;
    /**绝对定位 根据父组件定位**/
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.green-text {
    font-size: 24px; /* 设置大字体 */
    color: #fa543c; /* 设置字体颜色为白色 */
    margin-bottom: 5px; /* 在两行字之间添加间隔 */
}

.red-text {
    font-size: 24px; /* 设置大字体 */
    color: #f9fbfe; /* 设置字体颜色为白色 */
    margin-bottom: 5px; /* 在两行字之间添加间隔 */
}

.green-subtext {
    font-size: 14px; /* 设置小字体 */
    color: #fa543c; /* 设置字体颜色为白色 */
}

.red-subtext {
    font-size: 14px; /* 设置小字体 */
    color: #f9fbfe; /* 设置字体颜色为白色 */
}

.red-text, .red-subtext {
    /* 省略了部分代码 */
    text-align: left; /* 设置文本左对齐 */
    padding-left: 60px; /* 设置左边的间距 */
}

/***
  父相对子绝对
***/

.wrap_ {
    display: flex;
    justify-content: space-between;
    padding: 10px;
}

.item {
    background-color: #e1e1e1;
    border-radius: 10px;
    padding: 5px;
}

.item:not(:last-child) {
    margin-right: 10px; /* Add margin to the right of each item, except for the last one */
}

.text-item {
    margin: 0 8px;
    font-size: 18px;
}

.list-item {
    display: flex;
    align-items: flex-start;
    padding: 12px 20px;
    box-sizing: border-box;
    background-color: white; /* 设置列表项的背景色为白色 */
    margin-bottom: 10px; /* 创建列表项间的间隔 */
    border-radius: 10px; /* 创建圆角 */
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); /* 添加阴影 */
}


.list image {
    width: 100px;
    height: 150px;
    vertical-align: top;
}

.list {
    background-color: #e1e1e1; /* 设置列表的背景色为浅灰色 */
    padding: 10px; /* 创建列表的内边距 */
}

.list-item {
    display: flex;
    align-items: flex-start;
    padding: 12px 20px;
    box-sizing: border-box;
    background-color: white; /* 设置列表项的背景色为白色 */
    margin-bottom: 10px; /* 创建列表项间的间隔 */
    border-radius: 10px; /* 创建圆角 */
}

.img1 {
    width: 100px;
    height: 100px;
    border-radius: 10px;
    object-fit: cover;
    margin-right: 20px;
}

.content {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    overflow: hidden;
    margin-left: 20px; /* 在左侧添加20px的间距 */
}

.content view {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.content .name {
    font-size: 24px; /* 设置大字体 */
    color: rgba(10, 10, 10, 0.89); /* 设置字体颜色为深灰色 */
    margin-bottom: 5px; /* 在两行字之间添加间隔 */
    line-height: 1.5; /* 增加行高 */
}


.content .score {
    font-size: 20px; /* 设置大字体 */
    color: rgba(158, 88, 88, 0.89); /* 设置字体颜色为白色 */
    margin-bottom: 5px; /* 在两行字之间添加间隔 */
}

.merchant {
    display: flex; /* 使用Flex布局 */
    align-items: center; /* 垂直居中 */

    color: rgb(189, 118, 38); /* 设置灰色文字 */
    font-size: 20px; /* 设置字体大小 */
    margin-top: 5px; /* 在上方添加5px的间距 */
}

.merchant .icon {
    width: 25px;
    height: 25px;
    margin-right: 5px;
}


