/* pages/detail/index.wxss */
.price {
    color: red;
}

.originPrice {
    color: #aaa;
    text-decoration: line-through;
    margin-left: 5px;
    font-size: 12px;
}

.proname {
    font-weight: bold;
    font-size: 20px;
}

view {
    padding: 5px 10px;
    box-sizing: border-box;

}

.cover image {
    width: 100%;
    height: 300px;
}

/**定位**/
.model {
    width: 100%;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.8);
    position: fixed;
    left: 0;
    top: 0;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: space-between;
}

/* .model view{
  background: #fff;
  padding: 10px 20px;
} */

.model swiper {
    padding: 20px 10px;
    background: #fff;
    width: 100vw;
    height: 300px;
}

.model swiper image {
    width: 90vw;
    /* margin: 0 auto; */
}

.model .count {
    color: #fff;
    padding: 20px;
}

.info-row {
    display: flex;
    align-items: center;
}

.info-icon {
    width: 40px;
    height: 40px;
    margin-right: 10px;
}

.info-text {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.navbar {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 50px;
    background-color: #fff;
    display: flex;
    justify-content: space-around;
    align-items: center;
    border-top: 1px solid #eaeaea;
}

.nav-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    color: #333;
}

.nav-icon {
    width: 24px;
    height: 24px;
}

.nav-item text {
    font-size: 12px;
    margin-top: 4px;
}

.eav {
    background: linear-gradient(45deg, #fcfaf9, #f7f1f0);
    padding: 10px;
    background-color: rgb(252, 252, 252);
    border-radius: 20px;
    height: 300px;
    display: flex;
}

