.form {
    margin: 30px 40px 0px 40px; /* 上→右→下→左 */
    height: 100vh;
    display: flex;
    flex-direction: column;
}

.user-login {
    font-size: 20px;
    font-weight: bold;
}

.form-item {
    padding: 0 10px;
    box-sizing: border-box;
    width: calc(100vw - 80px); /* 减去左右边距的总宽度 */
    display: flex;
    justify-content: center;

}

.user-login {
    margin-bottom: 10px;
}

.submit button {
    margin: 20px 0;
}


.user-agreement {
    display: flex;
    align-items: center;
    margin-top: 15px;
}


.agreement-link {
    color: rgb(41, 18, 158);
    padding: 0px 5px;
}

/* Set background and border radius for input fields */
.form-item input.weui-input[name="username"],
.form-item input.weui-input[name="password"] {
    background-color: #fcf6f6; /* Light grey background */
    border-radius: 5px; /* Rounded corners */
    padding: 10px 10px; /* 调整内部内容和边框之间的间距 */
    font-size: 15px;
    margin-bottom: 0px;
    margin-right: 0px;
}

/* Set background and border radius for login button */
.submit button[type="primary"] {
    background-color: rgb(255, 117, 147); /* Red background */
    border-radius: 5px; /* Rounded corners */
    width: calc(100vw - 80px); /* Match the width of input fields */
}

