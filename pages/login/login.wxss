/* Align '邮箱密码登录' and '用户协议' links to the right */

.user-password {
    display: flex;
    justify-content: space-between;
}

/* Style for the '用户协议' and '隐私政策' links */
.agreement-link,
.user-password .p2,
.user-password .p11,
.user-agreement .user-item agreement-link {
    color: rgb(16, 6, 65);
    padding: 0px 5px;
    font-size: 12px;
}

/* 让“忘记了找回密码”靠左对齐 */
.user-password .p1 {
    text-align: left;
    margin-right: 0px;
}

.user-password {
    display: flex;
}

/* 让“找回密码”靠左对齐 */
.user-password .p11 {
    flex: 1px;
    text-align: left;
}

/* 让“邮箱密码登录”靠右对齐 */
.user-password .p2 {
    text-align: right;
    margin-right: 0; /* 移除右侧间距 */
}

/* 调整字体颜色和大小 */
.user-password .p1,
.user-agreement {
    color: rgb(126, 126, 126); /* 设置为浅灰色 */
    font-size: 12px; /* 设置字体大小 */
}
