.input-container {
    display: flex;
    align-items: flex-start; /* 让内容在输入框的顶部显示 */
    height: 20vh; /* 高度占据屏幕高度的五分之一 */
    width: calc(100% - 20px); /* 宽度占据屏幕宽度的 100%，减去 20px 的边距 */
    margin: 0 10px; /* 设置容器的边距 */
    border-bottom: 1px solid #cdcdcd;
    margin-bottom: 10px;
}

.input-label {
    flex: 1;
    font-size: 16px;
    margin-bottom: 10px; /* 调整输入框标签和输入框之间的间距 */
}

.input-field {
    margin-top: 10px;
    flex: 2; /* 输入框占据剩余空间的 2/3 */
    border-radius: 5px;
    padding: 10px;
    resize: none; /* 禁止用户调整文本框的大小 */
    height: 100%; /* 设置输入框的高度占据整个容器 */
}

.input-container .icon {
    padding: 10px 0 0 0;
    flex: 1; /* 图片占据剩余空间的 1/3 */
    height: calc(100% - 30px); /* 图片的高度占据容器的 100%，减去 50px 的边距（包括输入框和标签的高度） */
    max-height: 90%; /* 图片最大高度为容器的高度 */
    width: auto; /* 根据比例自动调整宽度 */
}

/* 一些标签 */
.tag {
    display: flex;
    flex-direction: column;

}

.tag-item {
    margin-bottom: 20px;
    margin-left: 10px;
}

.content {
    display: flex;
    align-items: center;
}

.content .tag-end {
    margin-left: auto;
    width: 20px;
    height: 20px;
    margin-right: 20px;
}

.tag-avatar {
    width: 25px;
    height: 25px;
    margin-right: 10px;
    border-radius: 50px;
    margin-left: 10px;
}

.text {
    display: flex;
    flex-direction: column;
}

.username {
    font-size: 16px;
    color: black;
}

.end {
    text-align: center;
    font-size: 12px;
    color: #6b6b6b;
    margin-bottom: 20px;
}

.publish-btn {
    display: flex;
    align-items: center;
    background-color: #fd2a53; /* 粉红色 */
    border-radius: 10px; /* 圆角 */
    padding: 10px 140px;
    margin: 320px 20px;
}

.publish-btn .icon {
    width: 25px;
    height: 25px;
}

.publish-btn .text {
    font-size: 20px;
    color: #fff; /* 文字颜色 */
}
